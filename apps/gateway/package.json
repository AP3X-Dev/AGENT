{
  "name": "@ag3nt/gateway",
  "version": "0.0.1",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "node --watch src/index.ts",
    "build": "tsc -p tsconfig.json",
    "start": "node dist/index.js",
    "cli": "node --import tsx src/cli.ts",
    "lint": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "test:integration": "vitest run src/integration --testTimeout=30000",
    "test:all": "npm run test && npm run test:integration"
  },
  "dependencies": {
    "@slack/bolt": "^4.6.0",
    "better-sqlite3": "^12.6.2",
    "cors": "^2.8.6",
    "discord.js": "^14.25.1",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "helmet": "^8.1.0",
    "jiti": "^2.4.2",
    "node-schedule": "^2.1.1",
    "node-telegram-bot-api": "^0.67.0",
    "ws": "^8.17.0",
    "yaml": "^2.4.2",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.13",
    "@types/cors": "^2.8.19",
    "@types/express": "^4.17.21",
    "@types/node": "^25.3.0",
    "@types/node-schedule": "^2.1.8",
    "@types/node-telegram-bot-api": "^0.64.13",
    "@types/supertest": "^6.0.3",
    "@types/ws": "^8.5.10",
    "@vitest/coverage-v8": "^2.1.8",
    "@vitest/ui": "^2.1.8",
    "supertest": "^7.2.2",
    "tsx": "^4.7.0",
    "typescript": "^5.4.5",
    "vitest": "^2.1.8"
  }
}
